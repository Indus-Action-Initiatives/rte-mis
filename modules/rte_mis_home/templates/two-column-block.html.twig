{#
/**
 * @file
 * Theme implementation for the Two Column Block.
 */
#}
<div class="two-column-block">
  <div class="two-column-block__image">
    <img src="{{ image ?? 'profiles/contrib/rte_mis/modules/rte_mis_home/assets/two_column_block/two_column_image.jpeg' }}" alt="{{ title }}">
  </div>
  <div class="two-column-block__content">
    {% if title %}
      <h2>{{ title }}</h2>
    {% endif %}
    {% if description %}
      <p>{{ description }}</p>
    {% endif %}
    {% if link %}
      <div class="two-column-block-cta">
        <a href="{{ link }}" class="two-column-block__link">{% trans %}Learn More{% endtrans %}</a>
      </div>
    {% endif %}
  </div>
</div>
